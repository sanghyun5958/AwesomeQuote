<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@android:color/holo_blue_light</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="colorAccent" tools:ignore="NewApi">@android:color/holo_blue_dark</item>
        <item name="colorPrimary" tools:ignore="NewApi">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark" tools:ignore="NewApi">#ff6600</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="BackwardArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="CustomTextColor" parent="AppTheme">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="progress" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
    </style>





    <style name="ToolTipLayoutDefaultStyle.CustomFont" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">@color/white</item>
        <item name="android:textColor">#ffffff</item>
        <item name="ttlm_strokeColor">#FFB1CF</item> <!-- 테두리 -->
        <item name="ttlm_strokeWeight">3dp</item>

    <!--    <item name="ttlm_font">fonts/at.ttc</item> -->
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">#233982</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#D7D7E2</item>
        <item name="textAllCaps">false</item>

    </style>


</resources>
